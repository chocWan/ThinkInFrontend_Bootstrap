
@{
    ViewData["Title"] = "Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/bootstrap-load/css/fakeLoader.css" rel="stylesheet" />

@*<div class="fakeloader"></div>*@

<section id="section-navigation">
    <div class="container text-center">
        <button class="btn-default btn-white btn-active" onclick="LoadStyle1()">Spinner1</button>
    </div>
</section>

<div class="container text-center">
    <h1 style="margin-top:250px">DOM was loaded</h1>
</div>




@section Scripts{
    <script src="~/lib/bootstrap-load/js/fakeLoader.js"></script>
    <script>
        var LoadStyle1 = function () {
            $.fn.fakeLoader({
                timeToHide: 1200,
                bgColor: "#2ecc71",
                spinner: "spinner1"
            });
            $.fn.centerLoader();
        };
    </script>
}

