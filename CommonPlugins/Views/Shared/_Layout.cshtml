<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CommonPlugins</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">CommonPlugins</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Table">Table</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="DateTime">DateTime</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="AutoAdd">AutoAdd</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="AutoComplete">AutoComplete</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Load">Load</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Progress">Progress</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Select">Select</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="StarRating">StarRating</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Switch">Switch</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Tag">Tag</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Tree">Tree</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - CommonPlugins</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>    

    @RenderSection("Scripts", required: false)
</body>
</html>
